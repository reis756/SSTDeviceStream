<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sst.sstdevicestream.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.sst.sstdevicestream.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.sst.sstdevicestream.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />


    <fragment
        android:id="@+id/navigation_permission"
        android:name="com.sst.sstdevicestream.ui.permission.PermissionsFragment"
        android:label="@string/title_notifications" />

    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.sst.sstdevicestream.ui.framebyframe.CameraFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_camera" />

    <fragment
        android:id="@+id/navigation_srt_stream"
        android:name="com.sst.sstdevicestream.ui.srt.SrtStreamFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_srt_stream" />

    <action
        android:id="@+id/action_to_permissions"
        app:destination="@id/navigation_permission"
        app:popUpToInclusive="true"/>

    <action
        android:id="@+id/action_to_camera"
        app:destination="@id/navigation_camera"
        app:popUpToInclusive="true"/>
</navigation>